<!--
Schema version 2 adds:
- An optional boolean 'transitive' attribute on verbs.
- The 'interrogative' element.
Schema version 3 adds:
- The 'properNoun' element.
- The 'conjunction' element.
Schema version 4 adds:
- The 'speachVerb' element.
-->
<dictionary schemaVersion="4" language="en-au" name="Default">
	<article definite="the" indefinite="a" indefiniteBeforeVowel="an" />
  <demonstrative singular="this" plural="these" />
  <demonstrative singular="that" plural="those" />
  <personalPronoun singular="my" plural="our" />
  <personalPronoun singular="your" plural="your" />
  <personalPronoun singular="their" plural="their" />
  <personalPronoun singular="his" plural="his" />
  <personalPronoun singular="her" plural="her" />
  <personalPronoun singular="its" plural="its" />
  <interrogative singular="why does" plural="why do" />
  <interrogative singular="how does" plural="how do" />
  <interrogative singular="when does" plural="when did" />
  <interrogative singular="can" plural="can" />
  <interrogative singular="will" plural="will" />
  <interrogative singular="should" plural="should" />
  <conjunction value="and" separates="nounsandphrases"/>
  <conjunction value="or" separates="nounsandphrases"/>
  <conjunction value="but not" separates="nounsandphrases"/>
  <conjunction value="after" separates="nounsandphrases"/>
  <conjunction value="before" separates="nounsandphrases"/>
  <conjunction value="because of" separates="nounsandphrases"/>
  <conjunction value="and even" separates="nounsandphrases"/>
  <speachVerb past="said"/>
  <speachVerb past="spoke"/>
  <speachVerb past="uttered"/>
  <speachVerb past="yelled"/>
  <speachVerb past="stated"/>
  <speachVerb past="declared"/>
  <speachVerb past="announced"/>
  <speachVerb past="proclaimed"/>
  <speachVerb past="commented"/>
  <speachVerb past="remarked"/>
  <speachVerb past="voiced"/>
  <speachVerb past="sung"/>
  <speachVerb past="squeaked"/>
  <speachVerb past="whispered"/>
  <speachVerb past="thought"/>
  <speachVerb past="cried out"/>
  <speachVerb past="mumbled"/>
  <speachVerb past="muttered"/>
  <speachVerb past="shouted"/>
  <speachVerb past="asserted"/>
  <speachVerb past="prayed"/>
  <speachVerb past="replied"/>
  <speachVerb past="ranted"/>
  <speachVerb past="reasoned"/>
</dictionary>
